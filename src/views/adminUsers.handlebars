<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Administrar Usuarios</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Administrar Usuarios</h1>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Rol</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody id="userTable">
      {{#each users}}
      <tr>
        <td>{{first_name}} {{last_name}}</td>
        <td>{{email}}</td>
        <td>
          <select data-uid="{{_id}}" class="roleSelect">
            <option value="user" {{#if (eq role "user")}}selected{{/if}}>Usuario</option>
            <option value="premium" {{#if (eq role "premium")}}selected{{/if}}>Premium</option>
            <option value="admin" {{#if (eq role "admin")}}selected{{/if}}>Administrador</option>
          </select>
        </td>
        <td>
          <button data-uid="{{_id}}" class="deleteButton">Eliminar</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <script src="/socket.io/socket.io.js"></script>
  <script src="../public/js/adminUsers,js"></script>
</body>
</html>